---
// const header = Astro.props.header;
// const text = Astro.props.text;
const { header, text } = Astro.props;
const { name, image, location, from, to } = Astro.props.data;
const imgSrc = `./png/${image}`;
---

<article>
  <div class="card">
    <div class="card-img-container">
      <img src={imgSrc} alt="" />
      <h2 class="card-title">{name}</h2>
    </div>
    <div class="card-text">
      <p>{location}</p>
      <p>{from} - {to}</p>
    </div>
  </div>
  <slot />
</article>


<header>
  <button class="hamburger" aria-label="Toggle Menu">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <nav class="menu">
    <button class="close-menu" aria-label="Close Menu">
      <span></span>
      <span></span>
    </button>
    <ul class="links">
      <li><a href="#">PROGRAM</a></li>
      <li><a href="#">YOUR PROGRAM</a></li>
      <li><a href="#">ABOUT US</a></li>
      <li><a href="#">NAVIGATION</a></li>
      <li><a href="#">BECOME A VOLUNTEER</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 2rem;

    color: rgb(255, 255, 255);
  }

  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    width: 2rem;
    height: 1.5rem;
    padding: 0;
    background-color: transparent;
    border: none;
    cursor: pointer;
    position: relative; /* Add this line */
    z-index: 2; /* Add this line */
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 4px;
    background-color: rgb(0, 0, 0);
    transition: all 0.3s ease-in-out;
  }

  .menu {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -1;
    opacity: 0;
    visibility: hidden;
    background-color: #9f1d1d;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease-in-out;
  }

  .menu.active {
    z-index: 1;
    opacity: 1;
    visibility: visible;
  }

  .close-menu {
    position: absolute;
    top: 2rem;
    right: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    width: 2rem;
    height: 1.5rem;
    padding: 0;
    background-color: transparent;
    border: none;
    cursor: pointer;
    z-index: 3;
  }

  .links {
    font-family: Jost;
    list-style: none;
    margin-bottom: 0;
    padding: 0;
    text-align: left;
    z-index: 2;
    font-weight: 500;
  }

  .links li {
    margin-bottom: 3rem;
  }
  li a:hover {
    color: rgb(106, 10, 10);
    font-weight: 500;
  }

  .links a {
    color: #fff;
    font-size: 4rem;
    text-decoration: none;
    text-transform: uppercase;
  }
</style>
<script>
  const hamburger = document.querySelector(".hamburger");
  const menu = document.querySelector(".menu");

  hamburger.addEventListener("click", () => {
    menu.classList.toggle("active");
  });
</script>
